<section id="cart-sidebar" class="sidebar hidden">
    <button id="close-cart">✕</button>
    <div id="cart-content">
        {% if cart.items %}
            <ul>
                {% for item in cart.items %}
                    <li>
                        <img src="{{ item.image | img_url: '100x100' }}" alt="{{ item.title }}">
                        <p>{{ item.title }}</p>
                        <p>{{ item.quantity }}</p>
                        <p>{{ item.line_price | money }}</p>
                        <!-- Кнопка удаления -->
                        <button class="remove-item" data-key="{{ item.key }}">Удалить</button>
                    </li>
                {% endfor %}
            </ul>
            <p>Итого: {{ cart.total_price | money }}</p>
            <a href="/checkout">Перейти к оплате</a>
        {% else %}
            <p>Ваша корзина пуста</p>
        {% endif %}
    </div>

</section>
